{% extends 'base.html.twig' %}

{% block title %}Pages index{% endblock %}

{% block body %}
    <h1>Pages index</h1>

    <table class="table table-striped table-middle-aligned table-borderless">
        <thead>
        <tr>
            <th>Id</th>
            <th scope="col">{{ 'label.title'|trans }}</th>
            <th>Slug</th>
            <th>Content</th>
            <th scope="col"><i class="fa fa-calendar" aria-hidden="true"></i> {{ 'label.published_at'|trans }}</th>
            <th>UpdatedAt</th>
            <th scope="col" class="text-center"><i class="fa fa-cogs" aria-hidden="true"></i> {{ 'label.actions'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for page in pages %}
            <tr>
                <td>{{ page.id }}</td>
                <td>{{ page.title }}</td>
                <td>{{ page.slug }}</td>
                <td>{{ page.content | u.truncate(100) }}</td>
                <td>{{ page.createdAt ? page.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ page.updatedAt ? page.updatedAt|date('Y-m-d H:i:s') : '' }}</td>

                <td class="text-right">
                    <div class="item-actions">
                        <a href="{{ path('app_pages_show', {'id': page.id}) }}" class="btn btn-sm btn-secondary">
                            <i class="fa fa-eye" aria-hidden="true"></i> {{ 'action.show'|trans }}
                        </a>
                        <a href="{{ path('app_pages_edit', {'id': page.id}) }}" class="btn btn-sm btn-primary">
                            <i class="fa fa-edit" aria-hidden="true"></i> {{ 'action.edit'|trans }}
                        </a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="section actions">
        <a href="{{ path('app_pages_new') }}" class="btn btn-lg btn-success">
            <i class="fa fa-plus" aria-hidden="true"></i> {{ 'action.create_post'|trans }}
        </a>
    </div>
{% endblock %}
